/* pages/commit/commit.wxss */
.container {
  margin-top: 30rpx;
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.button {
  width: 90%;
  height: 85rpx;
  color: white;
  background-color: #f76968;
  border-radius: 15rpx;
  line-height: 85rpx;
  position: fixed;
  bottom: 50rpx;
  left: 5%;
}

.resourceinput {
  height: 80rpx;
  padding: 20rpx;
  margin: 15rpx;
  width: 85%;
  border-radius: 15rpx;
  background-color: #fff;
  font-size: 32rpx;
}

.textinput {
  height: 160rpx;
  padding: 20rpx;
  margin: 15rpx;
  width: 85%;
  border-radius: 15rpx;
  background-color: #fff;
  font-size: 32rpx;
}

.plas {
  font-size: 38rpx;
  color: #bbb;
}

.radio {
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.subtitle {
  font-size: 36rpx;
  color: #000000;
  height: 100rpx;
  line-height: 100rpx;
}

.catgegory-item {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 34rpx;
  width: 160rpx;
  text-align: center;
  margin: 0 15rpx 0 15rpx;
  border-radius: 10rpx;
  background-color: #fff;
  color: #f76968;
}

.active-item {
  width: 100rpx;
  background-color: #f76968;
  color: white;
  font-size: 34rpx;
  width: 160rpx;
}

.content-item {
  margin: 10rpx 12rpx;
  padding: 8rpx 20rpx;
  background-color: #ccc;
  border-radius: 15rpx;
  font-size: 32rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.active-content-item {
  margin: 10rpx 12rpx;
  padding: 8rpx 20rpx;
  background-color: #f76968;
  color: #fff;
  border-radius: 15rpx;
  font-size: 32rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.class{
  display: flex;
  flex-direction: row;
}

.classify_list{
  display: flex;
  font-size: 15px;
  width: 100%;
  overflow-y: scroll;
  white-space: nowrap; 
  color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
