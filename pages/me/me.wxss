/* pages/mine/mine.wxss */
page {
  height: 100%;
  background-color: #cdcdcd;
}

.login {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 34rpx;
  color: #f76767;
}

.personalInf {
  width: 100%;
  height: 500rpx;
  margin-top: 0rpx;
  margin-left: 0rpx;
  margin-right: 0rpx;
  background-color: #efefef;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.deco {
  width: 200rpx;
  height: 200rpx;
  margin: 100rpx 0 50rpx 0;
  border-radius: 15rpx;
  background-color: #ddd;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.ava {
  margin-top: 10rpx;
  width: 180rpx;
  height: 180rpx;
}

.nn {
  font-size: 32rpx;
  color: #555;
  padding-bottom: 20rpx;
}

.firstblock {
  height: 150rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.secondblock {
  margin-top: 20rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #bbb;
  display: flex;
  flex-direction: column;
}


.menu {
  height: 400rpx;
  margin-top: 60rpx;
  padding: 30rpx 30rpx 30rpx 30rpx;
  width: 80%;
  background-color: #efefef;
  border-radius: 25rpx;
}

.item {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  border-bottom: solid 1px #ddd;
}

.item0 {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
}

.text {
  font-size: 36rpx;
}

.icon {
  margin: 0 20rpx 0 20rpx;
  height: 50rpx;
  width: 50rpx;
}

.small-icon {
  margin: 0 20rpx 0 20rpx;
  height: 30rpx;
  width: 30rpx;
}








